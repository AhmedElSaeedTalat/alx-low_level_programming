CC=gcc
SRC= main.c school.c
NAME=school
RM= rm -f
CFLAGS=-Wall -Werror -Wextra -pedantic
OBJ= $(SRC:.c=.o)

.PHONY: all oclean clean fclean re

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

oclean: 
	$(RM) $(OBJ)

clean:	
	$(RM) *~ $(NAME)

fclean:	clean oclean

re: oclean all

ifeq ($(wildcard m.h),)
$(error)
endif
